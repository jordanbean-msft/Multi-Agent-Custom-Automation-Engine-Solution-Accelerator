{
  "location": "${AZURE_LOCATION}",
  "environment_name": "${AZURE_ENV_NAME}",
  "principal_id": "${AZURE_PRINCIPAL_ID}",
  "resource_group_name": "${AZURE_RESOURCE_GROUP_NAME}",
  "public_network_access_enabled": false,
  "zone_redundancy_enabled": false,
  "network": {
    "virtual_network_name": "${AZURE_VIRTUAL_NETWORK_NAME}",
    "resource_group_name": "${AZURE_VIRTUAL_NETWORK_RESOURCE_GROUP_NAME}",
    "private_endpoint_subnet_name": "${AZURE_PRIVATE_ENDPOINT_SUBNET_NAME}",
    "container_apps_subnet_name": "${AZURE_CONTAINER_APPS_SUBNET_NAME}",
    "ai_foundry_agent_subnet_name": "${AZURE_AI_FOUNDRY_AGENT_SUBNET_NAME}",
    "app_service_subnet_name": "${AZURE_APP_SERVICE_SUBNET_NAME}"
  },
  "cosmos_db": {
    "document_time_to_live": 2592000,
    "max_throughput": 4000
  },
  "storage_account": {
    "account_tier": "Standard",
    "account_replication_type": "LRS"
  },
  "ai_foundry": {},
  "container_apps": {
    "workload_profile_type": "D4",
    "minimum_count": 1,
    "maximum_count": 3,
    "backend": {
      "name": "api",
      "containers": [
        {
          "name": "api",
          "image": "${SERVICE_API_IMAGE}",
          "cpu": 2.0,
          "memory": "4.0Gi"
        }
      ],
      "ingress": {
        "external_enabled": false,
        "target_port": 80
      },
      "scale": {
        "min_replicas": 1,
        "max_replicas": 3
      }
    }
  },
  "web_site": {
    "sku_name": "B1",
    "image_name": "${SERVICE_WEB_IMAGE}"
  }
}
